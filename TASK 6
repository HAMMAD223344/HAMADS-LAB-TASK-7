#include<iostream>
using namespace std;
int main(){
int num1 =0;
int num2 =1;
int n;
int res;
cout<<"enter the number of terms in fibonacci sequence";
cin>>n;
for(int i=1;i<=n;i++){
 if (i<=1){
res=i;
}
else{
res=num1+num2;
num1=num2;
num2=res;
}
cout<<res;
}
return 0;
}
 HOME TASK 2:
#include<iostream>
using namespace std;
int main(){
	
int n;
cout<<"enter the number of rows";
cin>>n;
for(int i=1;i<=n;i++){
int coef=1;
for(int k=n-i;k>0;k--)
		cout<<" ";
	for(int j=1;j<=i;j++)
	{
	cout<<coef<<" ";
		coef=coef*(i-j)/j;
				 } 
			cout<<endl;
}
return 0;
}
