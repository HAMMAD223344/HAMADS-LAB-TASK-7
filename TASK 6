 labTASK 1:
#include <iostream>
using namespace std;
int main() {
    int prime_sum = 0;
    for (int num = 1; num <= 50; ++num) {
        // Check if the number is prime
        bool is_prime = true;
        for (int i = 2; i <= num / 2; ++i) {
            if (num % i == 0) {
                is_prime = false;
                break;
            }     }
   if (is_prime) {
        prime_sum += num;
        }    }
    cout << "Sum of prime numbers from 1 to 50: " << prime_sum << endl;
return 0;
}
